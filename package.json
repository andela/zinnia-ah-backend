{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "src/server.js",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "start": "node build/server.js",
    "start:dev": "nodemon --exec babel-node src/server.js",
    "test": "NODE_ENV=test nyc mocha --recursive src/tests --require @babel/register --exit --no-timeouts",
    "test:watch": "NODE_ENV=test mocha src/tests/**/**.test.js --watch",
    "build": "rm -rf build && babel src -d build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "db:migrate": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "db:migrate:testdb": "NODE_ENV=test npm run db:migrate"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.0.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.1.1",
    "sequelize-cli": "^5.4.0",
    "swagger-jsdoc": "^3.2.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-regenerator": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.2",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "mockery": "^2.1.0",
    "nodemailer-mock": "^1.3.17",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  }
}
